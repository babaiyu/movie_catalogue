<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_all"
    android:scrollbars="none"
    tools:context=".MovieDetail">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/detail_poster"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/movie_img"
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:contentDescription="@string/image_poster_movie"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_all"
                tools:ignore="RtlSymmetry">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/movie_title"
                        style="@style/TextHeader"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/movie_score"
                        style="@style/TextDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_all">

                    <TextView
                        style="@style/TextDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/release_date" />

                    <TextView
                        android:id="@+id/movie_release"
                        style="@style/TextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_all">

                    <TextView
                        style="@style/TextDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/director" />

                    <TextView
                        android:id="@+id/movie_director"
                        style="@style/TextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_all">

                    <TextView
                        style="@style/TextDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/caster" />

                    <TextView
                        android:id="@+id/movie_caster"
                        style="@style/TextBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_all"
            android:layout_marginBottom="@dimen/padding_all"
            android:orientation="vertical">

            <TextView
                style="@style/TextDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overview" />

            <TextView
                android:id="@+id/movie_description"
                style="@style/TextBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/padding_all"
                    android:background="@drawable/card_feature"
                    android:padding="@dimen/margin_all"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/feature_title"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_poster_movie"
                        android:textColor="@color/customWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_all"
                    android:layout_marginRight="@dimen/padding_all"
                    android:background="@drawable/card_feature"
                    android:padding="@dimen/margin_all"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/feature_director"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_poster_movie"
                        android:textColor="@color/customWhite" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_all"
                    android:layout_marginRight="@dimen/padding_all"
                    android:background="@drawable/card_feature"
                    android:padding="@dimen/margin_all"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/feature_release"
                        style="@style/TextBody"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/image_poster_movie"
                        android:textColor="@color/customWhite" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_all"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_like"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_all"
                android:text="@string/like_this_movie"
                android:textColor="@color/customDarkBlue" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>