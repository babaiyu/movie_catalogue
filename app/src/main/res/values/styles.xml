<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/customDarkBlue</item>
        <item name="colorPrimaryDark">@color/customDarkBlue</item>
        <item name="colorAccent">@color/customBlue</item>
    </style>

    <style name="TextHeader" parent="@style/TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/customDarkBlue</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextDetail" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/customBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:color">@color/customBlack</item>
    </style>

</resources>
